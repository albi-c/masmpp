CXX = x86_64-w64-mingw32-g++
CXXSTD = c++17
CXXLFLAGS = -g -std=$(CXXSTD) -static
CXXFLAGS = -g -std=$(CXXSTD)
EXEC = masm++.exe
OBJECTS = cli.o libmasm++.o
MAKEOPTIONS = -f Makefile_win

all: $(EXEC)

release: $(EXEC)
	@zip masm++-windows.zip $(EXEC)

$(EXEC): $(OBJECTS)
	@$(CXX) $(CXXLFLAGS) $^ -o $@

%.o: src/%.cpp
	@$(CXX) $(CXXFLAGS) -c $< -o $@

run: all
	@wine $(EXEC)

crun:
	@$(MAKE) $(MAKEOPTIONS) clean
	@$(MAKE) $(MAKEOPTIONS) run

crunc:
	@$(MAKE) $(MAKEOPTIONS) crun
	@$(MAKE) $(MAKEOPTIONS) clean

clean:
	@rm -f *.o *.zip $(EXEC)
